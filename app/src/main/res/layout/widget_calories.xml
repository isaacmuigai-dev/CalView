<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Redesigned CalViewAI Widget Layout (Restored & Enhanced)
    - Theme gradient background
    - Nested progress rings (calories outer, steps inner)
    - Compact macro progress bars
    - Activity stats row (Steps, Burn, Rollover, Streak)
    - Header: BMI & Calendar
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background_gradient"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Row 1: App Header (Calendar & BMI & Streak) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <!-- Calendar Strip -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/widget_day_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TODAY"
                android:textSize="12sp"
                android:textColor="#B3000000"
                android:textStyle="bold"
                android:letterSpacing="0.1"/>
                
            <TextView
                android:id="@+id/widget_full_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 19"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"/>
        </LinearLayout>
        
        <!-- Streak Display (New) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginEnd="12dp">
            
            <ImageView
                android:id="@+id/widget_streak_icon"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_fire"
                android:layout_marginEnd="2dp"
                app:tint="#FF5722"/>
                
            <TextView
                android:id="@+id/widget_streak_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF5722"/>
        </LinearLayout>

        <!-- BMI Badge -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_bmi_background"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:gravity="center_vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMI"
                android:textSize="12sp"
                android:textColor="#99000000"
                android:layout_marginEnd="4dp"/>
                
            <TextView
                android:id="@+id/widget_bmi_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp" />

    <!-- Row 2: Main Content (Rings + Macros) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Left: Nested Progress Rings -->
        <FrameLayout
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginEnd="12dp">

            <!-- Outer Calorie Ring -->
            <ProgressBar
                android:id="@+id/widget_calorie_ring"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/widget_ring_calories" />

            <!-- Inner Steps Ring -->
            <ProgressBar
                android:id="@+id/widget_steps_ring"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/widget_ring_steps" />

            <!-- Center Text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/widget_calories_remaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#1A1A1A"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/widget_calories_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="left"
                    android:textColor="#666666"
                    android:textSize="9sp" />

                <!-- Indicators -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="1dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/widget_indicator_rollover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+0"
                        android:textColor="#FFC107"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:layout_marginEnd="2dp"/>

                    <TextView
                        android:id="@+id/widget_indicator_active"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+0"
                        android:textColor="#10B981"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <!-- Right: Macros Section with compact progress bars -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Protein Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pro"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    android:width="24dp"/>

                <ProgressBar
                    android:id="@+id/widget_protein_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="6dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/widget_macro_progress_protein" />

                <TextView
                    android:id="@+id/widget_protein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0g"
                    android:textColor="#1A1A1A"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Carbs Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Car"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    android:width="24dp"/>

                <ProgressBar
                    android:id="@+id/widget_carbs_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="6dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/widget_macro_progress_carbs" />

                <TextView
                    android:id="@+id/widget_carbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0g"
                    android:textColor="#1A1A1A"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Fats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fat"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    android:width="24dp"/>

                <ProgressBar
                    android:id="@+id/widget_fats_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="6dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/widget_macro_progress_fats" />

                <TextView
                    android:id="@+id/widget_fats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0g"
                    android:textColor="#1A1A1A"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp" />

    <!-- Row 3: Activity Stats (Steps, Burn, 7d Burn, Record) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:paddingBottom="6dp">

        <!-- Steps Chip -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/widget_stat_chip_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steps"
                android:textColor="#666666"
                android:textSize="7sp" />

            <TextView
                android:id="@+id/widget_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#1A1A1A"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Burn Chip -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/widget_stat_chip_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Burn"
                android:textColor="#666666"
                android:textSize="7sp" />

            <TextView
                android:id="@+id/widget_burn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#1A1A1A"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 7d Burn Chip -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/widget_stat_chip_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7d Burn"
                android:textColor="#666666"
                android:textSize="7sp" />

            <TextView
                android:id="@+id/widget_weekly_burn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#1A1A1A"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Record Chip -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/widget_stat_chip_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Record"
                android:textColor="#666666"
                android:textSize="7sp" />

            <TextView
                android:id="@+id/widget_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#1A1A1A"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

        <!-- Rollover Indicator (New Location) -->
        <LinearLayout
             android:id="@+id/widget_rollover_text_container"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:gravity="end|center_vertical"
             android:visibility="gone">
             
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Rollover:"
                 android:textColor="#666666"
                 android:textSize="10sp"
                 android:layout_marginEnd="4dp"/>
                 
             <TextView
                 android:id="@+id/widget_rollover_value_bottom"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="+0"
                 android:textColor="#FFC107"
                 android:textSize="12sp"
                 android:textStyle="bold"/>
        </LinearLayout>
            
    <!-- BMI Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="0dp">

        <!-- Height/Weight Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/widget_bmi_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BMI"
                android:textColor="#374151"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Weight -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="12dp">
                
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_scale_weights" 
                    android:visibility="gone"
                    app:tint="#6B7280"/>
                    
                <TextView
                    android:id="@+id/widget_weight_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- kg"
                    android:textColor="#6B7280"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Height -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_height"
                    android:visibility="gone" 
                    app:tint="#6B7280"/>

                <TextView
                    android:id="@+id/widget_height_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- cm"
                    android:textColor="#6B7280"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- BMI Bar Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <!-- The Gradient Bar -->
            <ImageView
                android:id="@+id/widget_bmi_bar"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/rounded_rect_8dp"
                android:backgroundTint="#E5E7EB"
                android:clipToOutline="true"
                android:contentDescription="BMI Scale" />
                
            <!-- The Marker (Positioned programmatically via padding/margins) -->
            <ImageView
                android:id="@+id/widget_bmi_marker"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical|start"
                android:src="@drawable/circle_white_border" 
                android:visibility="visible"/> 
        </FrameLayout>

        <!-- BMI Categories Labels -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Under"
                android:textColor="#3B82F6"
                android:textSize="9sp"
                android:gravity="start"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Healthy"
                android:textColor="#10B981"
                android:textSize="9sp"
                android:gravity="center"/>
                
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Over"
                android:textColor="#F59E0B"
                android:textSize="9sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Obese"
                android:textColor="#EF4444"
                android:textSize="9sp"
                android:gravity="end"/>
        </LinearLayout>
        
        <!-- Category Text Display -->
        <TextView
            android:id="@+id/widget_bmi_category_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Normal Weight"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#10B981"
            android:gravity="center"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

</LinearLayout>
