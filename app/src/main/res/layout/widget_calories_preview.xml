<?xml version="1.0" encoding="utf-8"?>
<!-- Preview layout for Calories Widget with sample data -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background_gradient"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Row 1: App Header (Calendar & BMI & Streak) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <!-- Calendar Strip -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TODAY"
                android:textSize="12sp"
                android:textColor="#B3000000"
                android:textStyle="bold"
                android:letterSpacing="0.1"/>
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oct 24"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"/>
        </LinearLayout>
        
        <!-- Streak Display -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginEnd="12dp">
            
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_fire"
                android:layout_marginEnd="2dp"
                app:tint="#FF5722"/>
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF5722"/>
        </LinearLayout>

        <!-- BMI Badge -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_bmi_background"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:gravity="center_vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMI"
                android:textSize="12sp"
                android:textColor="#99000000"
                android:layout_marginEnd="4dp"/>
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22.4"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp" />

    <!-- Row 2: Main Content (Rings + Macros) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Left: Nested Progress Rings -->
        <FrameLayout
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginEnd="12dp">

            <!-- Outer Calorie Ring -->
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:indeterminate="false"
                android:max="100"
                android:progress="65"
                android:progressDrawable="@drawable/widget_ring_calories" />

            <!-- Inner Steps Ring -->
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:indeterminate="false"
                android:max="100"
                android:progress="80"
                android:progressDrawable="@drawable/widget_ring_steps" />

            <!-- Center Text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="450"
                    android:textColor="#1A1A1A"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="left"
                    android:textColor="#666666"
                    android:textSize="9sp" />
            </LinearLayout>
        </FrameLayout>

        <!-- Right: Macros Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Protein Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pro"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    android:width="24dp"/>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="6dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="70"
                    android:progressDrawable="@drawable/widget_macro_progress_protein" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90g"
                    android:textColor="#1A1A1A"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Carbs Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Car"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    android:width="24dp"/>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="6dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="45"
                    android:progressDrawable="@drawable/widget_macro_progress_carbs" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="110g"
                    android:textColor="#1A1A1A"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Fats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fat"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    android:width="24dp"/>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="6dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="30"
                    android:progressDrawable="@drawable/widget_macro_progress_fats" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25g"
                    android:textColor="#1A1A1A"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp" />

    <!-- Row 3: Activity Stats -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:paddingBottom="6dp">

        <!-- Steps Chip -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/widget_stat_chip_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steps"
                android:textColor="#666666"
                android:textSize="7sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8,432"
                android:textColor="#1A1A1A"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Burn Chip -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/widget_stat_chip_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Burn"
                android:textColor="#666666"
                android:textSize="7sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="450"
                android:textColor="#1A1A1A"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
        
        <!-- 7d Burn Chip -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/widget_stat_chip_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7d Burn"
                android:textColor="#666666"
                android:textSize="7sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.1k"
                android:textColor="#1A1A1A"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Record Chip -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/widget_stat_chip_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Record"
                android:textColor="#666666"
                android:textSize="7sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="610"
                android:textColor="#1A1A1A"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    
    <!-- BMI Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="0dp">

        <!-- Height/Weight Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BMI"
                android:textColor="#374151"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Weight -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="12dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70.5 kg"
                    android:textColor="#6B7280"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Height -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="175 cm"
                    android:textColor="#6B7280"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- BMI Bar Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <!-- The Gradient Bar -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/rounded_rect_8dp"
                android:backgroundTint="#E5E7EB"
                android:clipToOutline="true" />
                
            <!-- The Marker -->
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="120dp"
                android:src="@drawable/circle_white_border" 
                android:visibility="visible"/> 
        </FrameLayout>

        <!-- Category Text Display -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Healthy Weight"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#10B981"
            android:gravity="center"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

</LinearLayout>
