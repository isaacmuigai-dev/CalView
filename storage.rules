rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Shared meal images folder
    match /meal_images/{userId}/{allPaths=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Users can only upload their own profile photo
    // We match the entire filename and validate it in the condition
    match /profile_photos/{fileName} {
      allow write: if request.auth != null && fileName == request.auth.uid + ".jpg";
      allow read: if request.auth != null;
    }
  }
}
